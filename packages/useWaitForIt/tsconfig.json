{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/",
    "outDir": "dist/",
    "moduleResolution": "node"
  }
}
